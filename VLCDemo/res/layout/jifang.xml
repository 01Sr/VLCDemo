<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#eee">
   <LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_background"
  			android:gravity="center_horizontal|center_vertical"  >  
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="机房环境监控"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />       
			</LinearLayout>

   <RelativeLayout
       android:id="@+id/wendu"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="14dp"
       android:background="@drawable/preference_single_item"
       android:clickable="true"
       android:gravity="center_vertical" >

       <ImageView
           android:id="@+id/wendu1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:scaleType="matrix"
           android:src="@drawable/wendu" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/wendu1"
           android:padding="8dp"
           android:text="温度"
           android:textColor="#000"
           android:textSize="17sp" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:scaleType="matrix"
           android:src="@drawable/mm_submenu" />
   </RelativeLayout>

   <RelativeLayout
       android:id="@+id/shidu"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="14dp"
       android:background="@drawable/preference_single_item"
       android:clickable="true"
       android:gravity="center_vertical"
       android:onClick="btn_shake" >

       <ImageView
           android:id="@+id/shidu1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:scaleType="matrix"
           android:src="@drawable/shidu" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/shidu1"
           android:padding="8dp"
           android:text="湿度"
           android:textColor="#000"
           android:textSize="17sp" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:scaleType="matrix"
           android:src="@drawable/mm_submenu" />
   </RelativeLayout>

   		<RelativeLayout   
   		    android:id="@+id/dian"   				    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            android:onClick="btn_shake" >
      		<ImageView
      		    android:id="@+id/dian1"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentLeft="true"
        		android:src="@drawable/dian" />    
            <TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content"
        		android:layout_toRightOf="@id/dian1"
        		android:layout_centerVertical="true"
        		android:padding="8dp" 
        		android:text="电参数"
        		android:textSize="17sp"		
				android:textColor="#000" /> 
			<ImageView
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />      					
   		</RelativeLayout>
   		<RelativeLayout   
   		    android:id="@+id/shuijin"   				    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            android:onClick="btn_shake" >
      		<ImageView
      		    android:id="@+id/shuijin1"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentLeft="true"
        		android:src="@drawable/shuijin" />    
            <TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content"
        		android:layout_toRightOf="@id/shuijin1"
        		android:layout_centerVertical="true"
        		android:padding="8dp" 
        		android:text="水浸与烟雾"
        		android:textSize="17sp"		
				android:textColor="#000" /> 
			<ImageView
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />      					
   		</RelativeLayout>
   		<RelativeLayout   
   		    android:id="@+id/PM"   				    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            android:onClick="btn_shake" >
      		<ImageView
      		    android:id="@+id/PM2.5Y"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentLeft="true"
        		android:src="@drawable/yanwu" />    
            <TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content"
        		android:layout_toRightOf="@id/PM2.5Y"
        		android:layout_centerVertical="true"
        		android:padding="8dp" 
        		android:text="PM2.5"
        		android:textSize="17sp"		
				android:textColor="#000" /> 
			<ImageView
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />      					
   		</RelativeLayout>
   		<RelativeLayout   
   		    android:id="@+id/dengkong"   				    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            android:onClick="btn_shake" >
      		<ImageView
      		    android:id="@+id/dengkong1"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentLeft="true"
        		android:src="@drawable/dian" />    
            <TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content"
        		android:layout_toRightOf="@id/dengkong1"
        		android:layout_centerVertical="true"
        		android:padding="8dp" 
        		android:text="灯控"
        		android:textSize="17sp"		
				android:textColor="#000" /> 
			<ImageView
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />      					
   		</RelativeLayout>
   		
   		<RelativeLayout   
   		    android:id="@+id/menkong"   				    
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_single_item"
            android:onClick="btn_shake" >
      		<ImageView
      		    android:id="@+id/menkong1"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentLeft="true"
        		android:src="@drawable/shidu" />    
            <TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content"
        		android:layout_toRightOf="@id/menkong1"
        		android:layout_centerVertical="true"
        		android:padding="8dp" 
        		android:text="门控"
        		android:textSize="17sp"		
				android:textColor="#000" /> 
			<ImageView
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />      					
   		</RelativeLayout>

   		<Button
   		    android:id="@+id/button1"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="微信相关" />


</LinearLayout>
