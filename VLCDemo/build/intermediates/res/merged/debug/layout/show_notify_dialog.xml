<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:textColor="#4d4b48"
        android:background="@drawable/item_bg"
        android:textSize="@dimen/DialogTitleSize"
        android:text="提示"/>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#e5e5e5"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="85dip"
        android:background="@drawable/item_bg"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:gravity="center"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/input_pwd_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a8a7"
            android:gravity="center_vertical"
            android:textSize="@dimen/DialogMessageSize"
            android:text="请输入密码"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#e5e5e5"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/sure_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="确定"
            android:clickable="true"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/DialogMessageSize"
            android:visibility="gone"
            android:background="#6bc728"/>
        <TextView 
            android:id="@+id/cancle_tv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="取消"
            android:clickable="true"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/DialogMessageSize"
            android:visibility="gone"
            android:background="#fdad00"/>
        <TextView 
            android:id="@+id/cancle_tv2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="取消"
            android:clickable="true"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/DialogMessageSize"
            android:background="#bbbbbb"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
